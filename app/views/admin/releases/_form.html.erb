<%= form_with(model: [:admin, release]) do |form| %>
  <% if release.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(release.errors.count, "error") %> prohibited this release from being saved:</h2>

      <ul>
        <% release.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email_subject %>
    <%= form.text_field :email_subject, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email_template %>
    <p class="small">You can use the following template variables:
      <br>
      <code>%{user_email}</code>,
      <code>%{user_voices_count}</code>,
      <code>%{release_distributable_total}</code>,
      <code>%{entitlement_value}</code>
    </p>
    <%= form.text_area :email_template, class: 'form-control', rows: 10 %>

  </div>

  <div class="form-group">
    <%= form.label :distributable_total %>
    <%= form.number_field :distributable_total, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
