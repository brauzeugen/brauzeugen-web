<h1>Voices</h1>

<% if @voices.empty? %>

  <p>No voices</p>

<% else %>

  <table class="table">
    <tr>
      <th>Id</th>
      <th>Token</th>
      <th>User</th>
      <th>Brew batch</th>
    </tr>

    <% @voices.order(:id).each do |voice| %>
      <tr>
        <td><%= voice.id %></td>
        <td><%= voice.token[0..3] %>â€¦</td>
        <td><%= voice.user&.email %></td>
        <td><%= voice.brew_batch.id %></td>
      </tr>
    <% end %>
  </table>

<% end %>
